root = true

[*]
charset = utf-8
insert_final_newline = true

[*.py]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf

[*.rs]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_style = tabs
indent_size = 2
